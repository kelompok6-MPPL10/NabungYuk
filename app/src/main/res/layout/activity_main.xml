<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rezki.savingplan.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <EditText
            android:id="@+id/jmlpemasukkan"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="15dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Jumlah Pemasukkan Anda /Bulan"
            android:layout_marginTop="20dp"
            android:inputType="number"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/jmlpengeluaran"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="15dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Jumlah Pengeluaran Anda /Bulan"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/targetnabung"
            android:layout_width="300dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:hint="Target Menabung Anda"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/kalkulasi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Kalkulasi"
            />
    </LinearLayout>
</RelativeLayout>
